---
import Section from "./Section.astro";
---

<Section
  title="Model 3"
  subtitle="Starting at $32,740"
  color="black"
  id="model-3"
>
<div slot="footer" class="gap-x-2 min-[520px]:gap-x-6 flex mx-auto px-1">
  <a
    class="bg-[#171a20]/70 text-sm rounded font-medium text-white px-2 min-[425px]:px-4 min-[520px]:px-12 py-2 inline-block transition-colors"
    href="#"
  >
  Explore Inventory</a
  >
  <a
    class="bg-white text-sm rounded font-medium px-5 min-[520px]:px-12 py-2 transition-colors hover:bg-black hover:text-white inline-flex justify-center items-center text-black"
    href="#"
  >
  Custom Order</a
  >
</div>


  <img
    slot="background"
    alt="Model 3"
    class="h-full w-full object-cover object-center"
    src="model-3.avif"
    id="bg-image-model3"
  />
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true;
    } else {
      return false;
    }
  }

  var imageElement = document.querySelector("#bg-image-model3") as HTMLImageElement;

  if (isEdge()) {
    imageElement.src = "model-3.webp";
  } else {
    imageElement.src = "model-3.avif";
  }
</script>