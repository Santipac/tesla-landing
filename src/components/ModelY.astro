---
import Section from './Section.astro';
---

<Section
  title="Model Y"
  subtitle="Starting at $40,240"
  color="black"
  id="model-y"
>
  <div slot="footer" class="gap-x-6 flex mx-auto">
    <a
      class="bg-[#171a20]/70 text-sm rounded font-medium text-white px-12 py-2 inline-block transition-colors"
      href="#"
    >
    Explore Inventory</a
    >
    <a
      class="bg-white text-sm rounded font-medium px-12 py-2 transition-colors hover:bg-black hover:text-white inline-flex justify-center items-center text-black"
      href="#"
    >
    Custom Order</a
    >
  </div>

  <img
    slot="background"
    alt="Model Y"
    class="h-full w-full object-cover object-center bg-image"
    src="model-y.avif"
    id="bg-image-modely"
  />
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf('Edge') > -1 ||
      navigator.userAgent.indexOf('Edg') > -1
    ) {
      return true;
    } else {
      return false;
    }
  }

  var imageElement = document.querySelector(
    '#bg-image-modely'
  ) as HTMLImageElement;

  if (isEdge()) {
    imageElement.src = 'model-y.webp';
  } else {
    imageElement.src = 'model-y.avif';
  }
</script>
