  <img
    slot="background"
    alt="Model S"
    class="h-full w-full object-cover object-center"
    src="model-s.avif"
    id="bg-image-models"
  />
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf('Edge') > -1 ||
      navigator.userAgent.indexOf('Edg') > -1
    ) {
      return true;
    } else {
      return false;
    }
  }

  var imageElement = document.querySelector(
    '#bg-image-models'
  ) as HTMLImageElement;

  if (isEdge()) {
    imageElement.src = 'model-s.webp';
  } else {
    imageElement.src = 'model-s.avif';
  }
</script>
